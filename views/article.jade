include header.jade
  - if (user && (user.name == post.name))
    p
      span
        a.edit(href="/edit/#{post.name}/#{post.time.day}/#{post.title}") 编辑
    p
      span
        a.edit(href="/remove/#{post.name}/#{post.time.day}/#{post.title}") 删除
  p.info
    |作者：
    a(href="/u/#{post.name}") #{post.name}&nbsp;&nbsp;
    |日期：#{post.time.minute}
    |标签：
    - for(var i = 0; i<post.length; i++)
      - if(post[i].tags)
        a.tag(href="/tags/#{post[i].tags}") #{post[i].tags}
  p #{post.post}
  include comment.jade