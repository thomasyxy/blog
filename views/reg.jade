extends header
block content
  form(method="post")
    span.username 用户名：
    input(type="text" name="name")
    br
    span.pwd 密码：
    input(type="password" name="password")
    br
    span.re-pwd 确认密码：
    input(type="password" name="password-repeat")
    br
    span.email 邮箱：
    input(type="email" name="email")
    br
    input(type="submit" value="注册")